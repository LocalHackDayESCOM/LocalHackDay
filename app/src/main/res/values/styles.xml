<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/indigo_300</item>
        <item name="colorPrimaryDark">@color/indigo_400</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/teal_500</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:layout_margin">@dimen/spacing_large</item>-->
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">60dp</item>
        <!--<item name="android:src">@drawable/ic_add_black</item>-->
        <item name="borderWidth">0dp</item>
        <item name="elevation">10dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@color/colorPrimary</item>
        <item name="backgroundTint">@color/accent_material_light</item>
    </style>

</resources>
